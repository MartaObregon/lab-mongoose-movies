    <label for="celebName">Name</label>
    <input value={{celeb.name}} name="name" type="text" class="form-control" id="celebName" aria-describedby="emailHelp">
  </div>
  <div class="form-group">
    <label for="celebOccupation">Occupation</label>
    <input value= {{celeb.occupation}}name="occupation" type="text" class="form-control" id="celebOccupation">
  </div>
    <div class="form-group">
    <label for="celebPhrase">Catch Phrase</label>
    <input value={{celeb.catchPhrase}}name="catchPhrase" type="text" class="form-control" id="celebPhrase">
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>